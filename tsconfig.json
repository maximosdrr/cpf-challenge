{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": false
  },
  "include": ["src/**/*.ts", "src/application/use-cases/insert"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
